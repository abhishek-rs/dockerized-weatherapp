{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "linebreak-style": ["error", "windows"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-alert": "off"
  },
  "globals": {
    "fetch": false,
    "document": true,
    "navigator": true,
    "alert": true
  }
}
